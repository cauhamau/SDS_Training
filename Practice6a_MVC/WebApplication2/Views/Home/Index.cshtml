@model IEnumerable<WebApplication2.Models.Student>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MSSV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HOTENSV)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.MSSV
            </td>
            <td>
                @item.HOTENSV
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { Id = item.MSSV }) |
                @Html.ActionLink("Details", "Details", new { Id = item.MSSV }) |
                @Html.ActionLink("Delete", "Delete", new { Id = item.MSSV })
            </td>
        </tr>
    }

</table>