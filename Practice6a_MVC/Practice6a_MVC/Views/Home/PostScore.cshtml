@model Practice6a_MVC.Models.SubjectRegisted


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-control">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="row">
                @Html.LabelFor(model => model.MAMH, "Tên môn học:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.MAMH, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownList("MAMH", (IEnumerable<SelectListItem>)ViewBag.Subjects, new { htmlAttributes = new { @class = "form-control" } })
                    @*@Html.DropDownList("MANXB", (IEnumerable<SelectListItem>)ViewBag.MANXB, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.MAMH, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <br />
        @Html.HiddenFor(model => model.MSSV, new { Value = ViewBag.IdStudent })

        <div class="form-group">
            <div class="row">
                @Html.LabelFor(model => model.DQT, "Điểm quá trình:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="number" name="DQT" id="DQT" min="0" max="10" step="0.1" class="form-control" />
                    @Html.ValidationMessageFor(model => model.DQT, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="row">
                @Html.LabelFor(model => model.DTP, "Điểm thành phần:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.DTP, new { htmlAttributes = new { @class = "form-control" } })*@
                    <input type="number" name="DTP" id="DTP" min="0" max="10" step="0.1" class="form-control" />
                    @Html.ValidationMessageFor(model => model.DTP, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Nhập điểm" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}